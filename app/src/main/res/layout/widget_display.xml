<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/picton_blue">

    <TextView
        android:id="@+id/widget_taskName"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:text="Task Name here"
        android:textColor="@color/black"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:textSize="18dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/widget_daysLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:text="10" />

    <TextView
        android:id="@+id/widget_text_daysLeft"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_below="@id/widget_daysLeft"
        android:layout_alignEnd="@+id/widget_daysLeft"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:text="Days Left"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:layout_alignRight="@+id/widget_daysLeft"
        android:textSize="12dp"/>


</RelativeLayout>